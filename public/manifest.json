{
  "name": "Formul8 Cannabis AI Workspace",
  "short_name": "Formul8",
  "description": "Professional cannabis AI workspace with specialized agents, calculators, and document tools",
  "start_url": "/desktop",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#059669",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "categories": ["business", "productivity", "utilities"],
  "screenshots": [
    {
      "src": "/images/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop workspace view"
    },
    {
      "src": "/images/screenshot-mobile.png", 
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile workspace view"
    }
  ],
  "icons": [
    {
      "src": "/images/icon-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/formul8-logo.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "share_target": {
    "action": "/desktop/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf", "text/*", ".doc", ".docx", ".xls", ".xlsx", ".csv"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+formul8",
      "url": "/desktop/handle?data=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/desktop/file",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ]
}