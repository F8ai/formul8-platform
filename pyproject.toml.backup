# Backup of original pyproject.toml before simplification
# This file can be restored if Python packaging is needed

[project]
name = "formul8-agents"
version = "0.1.0"
description = "Python AI agents for Formul8 Platform"
requires-python = ">=3.11"
dependencies = [
    "langchain",
    "openai",
    "anthropic",
    "fastapi",
    "uvicorn",
    "requests",
    "python-dotenv"
]

[build-system]
requires = ["setuptools>=64", "wheel"]
build-backend = "setuptools.build_meta"

[tool.setuptools]
exclude = [
    "node_modules*",
    "client*", 
    "dist*",
    "docker-build-context*",
    "formul8-frontend*",
    "attached_assets*",
    "data*",
    "dashboard*",
    "docs*",
    "genomes*",
    "__pycache__*",
    "*.egg-info*"
]

[tool.setuptools.packages.find]
where = ["."]
include = ["agents.python_agents*"]
exclude = [
    "node_modules*",
    "client*",
    "dist*", 
    "docker-build-context*",
    "formul8-frontend*",
    "attached_assets*",
    "data*",
    "dashboard*",
    "docs*",
    "genomes*"
]

[tool.setuptools.package-dir]
"agents.python_agents" = "agents/python-agents"